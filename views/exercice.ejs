<%- include('header'); %>


  <div class="container jumbotron mr-auto mr-top">
    <h2><%= exercice.lib %></h2>
    <hr>
    
    <table>
      
      <tr>
        <td class="bold">Muscle(s):</td>
        <% tabMuscles.forEach(function(item){ %>
          <td><%= item.lib %></td>
        <% }) %>
        
      </tr>
      <tr>
        <td  class="bold" style="width:120px">Equipement(s):</td>
        <% tabEquips.forEach(function(item){ %>
          <td><%= item.lib %></td>
        <% }) %>
      </tr>
      <tr>
        <td class="bold">Niveau:</td>
        <td><%= exercice.difficulte %></td>
      </tr>
    </table> 



    <h2 class="mr-top-40">Execution du mouvement</h2>
    <hr>
    <div id="carouselExampleIndicators" class="carousel slide sizefix m-auto" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner ">
        <div class="carousel-item active">
          <img src="../public/images/exercices/<%= exercice.img1 %>" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="../public/images/exercices/<%= exercice.img2 %>" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
          <img src="../public/images/exercices/<%= exercice.img3 %>" class="d-block w-100" alt="...">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

  <%- include('footer'); %>