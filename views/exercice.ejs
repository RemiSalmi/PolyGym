<%- include('header'); %>


<div class="container jumbotron mr-auto mr-top">
  <h2><%= exercice.lib %></h2>
  <hr>


  <span id="idEx" style="display: none"><%=exercice.id %></span>
  <table>

    <tr>
      <td class="bold">Muscle(s):</td>
      <% tabMuscles.forEach(function(item){ %>
      <td><%= item.lib %></td>
      <% }) %>

    </tr>
    <tr>
      <td class="bold" style="width:120px">Equipement(s):</td>
      <% tabEquips.forEach(function(item){ %>
      <td><%= item.lib %></td>
      <% }) %>
    </tr>
    <tr>
      <td class="bold">Niveau:</td>
      <td><%= exercice.difficulte %></td>
    </tr>
  </table>



  <h2 class="mr-top-40">Execution du mouvement</h2>
  <hr>
  <div id="carouselExampleIndicators" class="carousel slide sizefix m-auto" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner ">
      <div class="carousel-item active">
        <img src="../public/images/exercices/<%= exercice.img1 %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../public/images/exercices/<%= exercice.img2 %>" class="d-block w-100" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../public/images/exercices/<%= exercice.img3 %>" class="d-block w-100" alt="...">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <h2 class="mr-top-40">Ajouter à mes programmes</h2>
  <hr>
  <div id="error" style="display:none" class="alert alert-danger alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>
  <div id="success" style="display:none" class="alert alert-success alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
      </button>
  </div>

  <form id="addProgForm">
    <input type="text" disabled id="inputIdUser" name="inputIdUser" value="6" style="display : none">
    <label for="inputIdProg">Choisissez le programme auquel vous voulez ajouter l'exercice</label>
    <select class="form-control bg-white" name="inputIdProg" id="inputIdProg">
    </select>
    <label for="inputNbSerie">Nombre de série</label>
    <input type="number" required class="form-control bg-white" name="inputNbSerie" id="inputNbSerie">
    <label for="inputNbRep">Nombre de répétition</label>
    <input type="number" required class="form-control bg-white" name="inputNbRep" id="inputNbRep">
    <button type="submit" class="btn btn-success mr-top-40">Ajouter</button>
  </form>

</div>
<script src="/public/scripts/autoFillProgList.js"></script>
<script src="/public/scripts/addExToProgramAjax.js"></script>


<%- include('footer'); %>