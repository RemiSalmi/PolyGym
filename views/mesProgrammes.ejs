<%- include('header'); %>

<div class=" container jumbotron mr-auto mr-top">
  <h1 class="mr-auto">Mes Programmes</h1>
  <a href="/programmes/mesProgrammes/creer" class="btn btn-warning mr-top-40">Ajouter un programme</a>
</div>


<div class="container jumbotron mr-auto mr-top mr-bot">

  <div class="row">
    <% if (tabProg.length == 0){ %>
    <span>Aucun programme</span>
    <%}%>
      <% tabProg.forEach(prog =>{ %>
    <div class="col-lg-4">
      <a href="/programmes/mesProgrammes/<%= prog.id%>">
        <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
          <div class="card-header">
            <h3 class="text-white"><%= prog.lib%></h3>
          </div>
          <div class="card-body">
            <h4 class="card-title">Description</h4>
            <p class="card-text"><%= prog.desc%></p>
          </div>
        </div>
      </a>
    </div>
    <%})%>
  </div>
</div>


<%- include('footer'); %>