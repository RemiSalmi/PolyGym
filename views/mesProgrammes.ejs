<%- include('header'); %>

<div class=" container jumbotron mr-auto mr-top">
  <h1 class="mr-auto">Mes Programmes</h1>
</div>


<div class="container jumbotron mr-auto mr-top">

  <div class="row">
    <% if (tabProg.length == 0){ %>
    <span>Aucun programme</span>
    <%}%>
      <% tabProg.forEach(prog =>{ %>
    <div class="col-lg-4">
      <a href="/programmes/mesProgrammes/<%= prog.id%>">
        <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
          <div class="card-header">
            <h3 class="text-white"><%= prog.lib%></h3>
          </div>
          <div class="card-body">
            <h4 class="card-title">Description</h4>
            <p class="card-text"><%= prog.desc%></p>
          </div>
        </div>
      </a>
    </div>
    <%})%>
  </div>
</div>

<div class="container mr-top">

  <div class="mr-auto">
    <ul class="pagination pagination-md justify-content-center ">
      <li class="page-item disabled">
        <a class="page-link" href="#">&laquo;</a>
      </li>
      <li class="page-item active">
        <a class="page-link" href="#">1</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">2</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">3</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">4</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">5</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="#">&raquo;</a>
      </li>
    </ul>
  </div>

</div>


<%- include('footer'); %>