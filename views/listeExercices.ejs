<%- include('header'); %>

<div class=" container jumbotron mr-auto mr-top-40">
    <h1 class="mr-auto">Exercices</h1>
    <div class="container-fluid mr-top-40">
        <div class="row">
            <div class="col-lg-10">
                <input id="searchBar" class="form-control bg-white border-black" type="text"
                    placeholder="Nom d'un exercice">
            </div>
            <div class="col-lg-2">
                <button id="searchBtn" class="btn btn-outline-warning my-2 my-sm-0">Rechercher</button>
            </div>
        </div>
    </div>
</div>

<div class="container mr-top-40">
    <div class="row">
        <aside class="col-lg-3 jumbotron noMargin-b">
            <h2>Filtres</h2>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Pectoraux" checked="">
                <label for="Pectoraux">Pectoraux</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class="filter" id="Abdominaux" checked="">
                <label for="Abdominaux">Abdominaux</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class="filter" id="Epaules" checked="">
                <label for="Epaules">Epaules</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Biceps" checked="">
                <label for="Biceps">Biceps</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Triceps" checked="">
                <label for="Triceps">Triceps</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Avant-bras" checked="">
                <label for="Avant-bras">Avant-bras</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Trapèzes" checked="">
                <label for="Trapèzes">Trapèzes</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Dorsaux" checked="">
                <label for="Dorsaux">Dorsaux</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Lombaires" checked="">
                <label for="Lombaires">Lombaires</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Fessiers" checked="">
                <label for="Fessiers">Fessiers</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Adducteurs" checked="">
                <label for="Adducteurs">Adducteurs</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Quadriceps" checked="">
                <label for="Quadriceps">Quadriceps</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Ischio-jambiers" checked="">
                <label for="Ischio-jambiers">Ischio-jambiers</label>
            </div>
            <div class=" custom-checkbox">
                <input type="checkbox" class=" filter" id="Mollets" checked="">
                <label for="Mollets">Mollets</label>
            </div>
        </aside>
        <section class="col-lg-9">
            <div class="container-fluid jumbotron mr-auto">
                <div class="row">
                    <% tabEx.forEach(ex =>{ %>
                    <a href="/exercices/<%= ex.id%>">
                        <div class="card mb-3 text-white bg-dark addMrgLR exs">
                            <div class="row no-gutters">
                                <div class="col-md-3">
                                    <img class="imgSize" src="/public/images/exercices/<%= ex.img1 %>"
                                        alt="image de l'exercice">
                                </div>
                                <div class=" col-md-9">
                                    <div class="card-header">
                                        <h3 class="card-title">
                                            <%ex.muscles.forEach(muscle =>{ %>
                                            <%= muscle.lib %>
                                            <% })%>
                                            </h5>
                                    </div>
                                    <div class=" card-body">
                                        <h5 class="card-title"><%= ex.lib %></h5>
                                    </div>
                                    <div class="card-footer text-white mr-top">
                                        difficulté : <%= ex.difficulte %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>

                    <% }) %>
                </div>
            </div>
        </section>

    </div>
</div>


<script src="/public/scripts/search.js"></script>
<script src="/public/scripts/filter.js"></script>
<%- include('footer'); %>